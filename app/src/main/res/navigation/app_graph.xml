<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/onboardFragment">

    <fragment
        android:id="@+id/onboardFragment"
        android:name="com.hcs.findmedev.presentation.onboard.OnboardFragment"
        android:label="OnboardFragment"
        tools:layout="@layout/fragment_onboard">
        <action
            android:id="@+id/action_onboardFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailUserFragment"
        android:name="com.hcs.findmedev.presentation.detail.DetailUserFragment"
        android:label="fragment_detail_user"
        tools:layout="@layout/fragment_detail_user" />
    <fragment
        android:id="@+id/searchUserFragment"
        android:name="com.hcs.findmedev.presentation.search.SearchUserFragment"
        android:label="fragment_search_user"
        tools:layout="@layout/fragment_search_user">
        <action
            android:id="@+id/action_searchUserFragment_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hcs.findmedev.presentation.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchUserFragment"
            app:destination="@id/searchUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/followersFragment"
        android:name="com.hcs.findmedev.presentation.follower.FollowersFragment"
        android:label="FollowersFragment"
        tools:layout="@layout/followers_fragment" >
        <action
            android:id="@+id/action_followersFragment_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/followingFragment"
        android:name="com.hcs.findmedev.presentation.follower.FollowingFragment"
        android:label="FollowingFragment"
        tools:layout="@layout/following_fragment" >
        <action
            android:id="@+id/action_followingFragment_to_detailUserFragment"
            app:destination="@id/detailUserFragment" />
    </fragment>
</navigation>